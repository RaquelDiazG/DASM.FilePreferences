<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="screen_preference"
        android:summary="@string/txtResumenOpcionesAlmacenamiento"
        android:title="@string/txtOpcionesAlmacenamiento">
        <PreferenceCategory
            android:key="pref_key_storage_settings"
            android:title="@string/txtOpcionesAlmacenamiento">
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="checkbox_preference"
                android:summary="@string/txtResumenAlmacenamientoSD"
                android:title="@string/txtAlmacenamientoSD" />
            <EditTextPreference
                android:defaultValue=""
                android:dialogTitle="@string/txtNombreFichero"
                android:key="edittext_preference"
                android:summary="@string/txtResumenNombreFichero"
                android:title="@string/txtNombreFichero" />
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>